@model CrudUsingTempData.Models.EmployeeModel

@{
    ViewData["Title"] = ViewBag.Title;
}

<h1>@ViewBag.Title</h1>

<hr />
<div class="row">
    <div class="col-12">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <h5>@TempData["ErrorMessage"]</h5>
            </div>
        }
    </div>
</div>
<div class="row my-2">
    <div class="col-md-4">
        <form asp-action="Save">

            <input asp-for="EmployeeId" type="hidden" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" autocomplete="off" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" autocomplete="off" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <input asp-for="Gender" class="form-control" autocomplete="off" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" autocomplete="off" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary mr-2">Save</button>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>
        

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
